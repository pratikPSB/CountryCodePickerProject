<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/linear_flag_holder"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:gravity="center"
            android:visibility="visible">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_17sdp"
                android:maxHeight="@dimen/_15sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/flag_india"
                app:shapeAppearanceOverlay="@style/cornerRadiusShapeableImageForFlags" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_code"
            style="@style/BookText"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/linear_flag_holder"
            android:gravity="center_vertical"
            android:text="+91"
            android:textColor="@color/black"
            android:textDirection="ltr"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/textView_countryName"
            style="@style/MediumText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_code"
            android:gravity="center_vertical"
            android:text="India (IN)"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <View
            android:id="@+id/preferenceDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/textView_countryName"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="#E5E5EA" />

    </RelativeLayout>
</layout>